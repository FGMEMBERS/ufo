	<group>
		<layout>hbox</layout>
		<default-padding>2</default-padding>

		<button>
			<halign>right</halign>
			<legend>Reset</legend>
			<pref-height>22</pref-height>
			<pref-width>60</pref-width>
			<binding>
				<command>nasal</command>
				<script>ufo.adjust.orient()</script>
			</binding>
		</button>

		<button>
			<legend>Sticky</legend>
