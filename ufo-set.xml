<?xml version="1.0"?>

<PropertyList>
 <sim>
  <description>UFO from the 'White Project' of the UNESCO</description>
  <author>ET</author>

  <flight-model>ufo</flight-model>

  <sound>
   <path>Aircraft/ufo/ufo-sound.xml</path>
  </sound>

  <panel>
   <visibility>false</visibility>
  </panel>

  <model>
   <path>Aircraft/ufo/Models/ufo.xml</path>
  </model>

  <help>
   <title>UFO</title>
   <key>
    <name>joystick fire button</name>
    <desc>fly backwards</desc>
   </key>
   <key>
    <name>b</name>
    <desc>fly backwards</desc>
   </key>
   <key>
    <name>[ ]</name>
    <desc>decrease/increase maximum speed</desc>
   </key>
   <key>
    <name>mouse click</name>
    <desc>set cursor</desc>
   </key>
   <key>
    <name>tab</name>
    <desc>open/close cursor dialog</desc>
   </key>
   <key>
    <name>d</name>
    <desc>dump coordinates</desc>
   </key>
  </help>
 </sim>

 <input>
  <keyboard>
   <key n="100">
    <name>d</name>
    <desc>Dump cursor/UFO coordinates</desc>
    <binding>
     <command>nasal</command>
     <script>ufo.dumpCoords()</script>
    </binding>
   </key>

   <key n="9">
    <name>Ctrl-I</name>
    <desc>Show cursor dialog</desc>
    <binding>
     <command>nasal</command>
     <script>ufo.showDialog()</script>
    </binding>
   </key>
  </keyboard>
 </input>

 <cursor>Aircraft/ufo/Models/cursor.ac</cursor>

 <models>
  <model>
   <name>cursor</name>
   <path alias="/cursor"/>
   <longitude-deg-prop>/cursor-data/longitude-deg</longitude-deg-prop>
   <latitude-deg-prop>/cursor-data/latitude-deg</latitude-deg-prop>
   <elevation-ft-prop>/cursor-data/elevation-ft</elevation-ft-prop>
   <heading-deg-prop>/cursor-data/heading-deg</heading-deg-prop>
   <pitch-deg-prop>/cursor-data/pitch-deg</pitch-deg-prop>
   <roll-deg-prop>/cursor-data/roll-deg</roll-deg-prop>
  </model>
 </models>

 <nasal>
  <ufo>
   <file>Aircraft/ufo/ufo.nas</file>
  </ufo>
 </nasal>
</PropertyList>
